---
// Import the global.css file here so that it is included on
// all pages through the use of the <BaseHead /> component.
import '../styles/global.css';
import type { ImageMetadata } from 'astro';
import FallbackImage from '../assets/hero-cockpit-dashboard.svg';
import { SITE_TITLE } from '../consts';
import { bcp47, defaultLocale, locales, type Locale } from '../i18n/locales';
import { localePath } from '../i18n/utils';

interface Props {
	title: string;
	description: string;
	image?: ImageMetadata;
	locale?: Locale;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const { title, description, image = FallbackImage, locale = defaultLocale } = Astro.props;

// Determine the bare path (without locale prefix) for hreflang URLs
let barePath = Astro.url.pathname;
for (const loc of locales) {
	if (loc !== defaultLocale && barePath.startsWith(`/${loc}/`)) {
		barePath = barePath.slice(loc.length + 1);
		break;
	}
	if (loc !== defaultLocale && barePath === `/${loc}`) {
		barePath = '/';
		break;
	}
}
---

<!-- Google Consent Mode v2 — default: denied -->
<script is:inline>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}

  // 1. Set default consent BEFORE loading gtag.js
  gtag('consent', 'default', {
    ad_storage: 'denied',
    analytics_storage: 'denied',
    ad_user_data: 'denied',
    ad_personalization: 'denied',
    wait_for_update: 500
  });
  console.log('[Consent] Default: all denied');

  // 2. If user already made a choice, restore it immediately
  (function() {
    var saved = localStorage.getItem('vf-cookie-consent');
    if (saved) {
      try {
        var prefs = JSON.parse(saved);
        gtag('consent', 'update', prefs);
        console.log('[Consent] Restored from localStorage:', prefs);
      } catch(e) {}
    }
  })();
</script>

<!-- Google tag (gtag.js) — loads AFTER consent defaults -->
<script async src="https://www.googletagmanager.com/gtag/js?id=G-MJXB6CZWNN"></script>
<script is:inline>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());
  gtag('config', 'G-MJXB6CZWNN');
</script>

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="icon" href="/favicon.ico" />
<link rel="sitemap" href="/sitemap-index.xml" />
<link
	rel="alternate"
	type="application/rss+xml"
	title={SITE_TITLE}
	href={new URL('rss.xml', Astro.site)}
/>
<meta name="generator" content={Astro.generator} />

<!-- Font preloads -->
<link rel="preload" href="/fonts/atkinson-regular.woff" as="font" type="font/woff" crossorigin />
<link rel="preload" href="/fonts/atkinson-bold.woff" as="font" type="font/woff" crossorigin />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- hreflang alternate links -->
{locales.map((loc) => (
	<link rel="alternate" hreflang={bcp47[loc]} href={new URL(localePath(loc, barePath), Astro.site)} />
))}
<link rel="alternate" hreflang="x-default" href={new URL(barePath, Astro.site)} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={new URL(image.src, Astro.url)} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={new URL(image.src, Astro.url)} />
