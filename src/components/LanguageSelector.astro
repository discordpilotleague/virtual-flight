---
import { locales, localeNames, type Locale } from '../i18n/locales';
import { getLocaleFromUrl, switchLocalePath } from '../i18n/utils';

const currentPath = Astro.url.pathname;
const currentLocale = (Astro.currentLocale ?? getLocaleFromUrl(currentPath)) as Locale;
---

<div class="language-selector">
	<button aria-label="Change language" aria-expanded="false" class="lang-toggle">
		{localeNames[currentLocale]}
		<svg width="12" height="12" viewBox="0 0 12 12" aria-hidden="true">
			<path d="M2 4l4 4 4-4" stroke="currentColor" stroke-width="1.5" fill="none" />
		</svg>
	</button>
	<ul class="lang-dropdown" role="list">
		{locales.map((locale) => (
			<li>
				<a
					href={switchLocalePath(currentPath, locale)}
					aria-current={locale === currentLocale ? 'page' : undefined}
					hreflang={locale}
				>
					{localeNames[locale]}
				</a>
			</li>
		))}
	</ul>
</div>

<style>
	.language-selector {
		position: relative;
	}
	.lang-toggle {
		background: none;
		border: 1px solid rgb(var(--gray-light));
		border-radius: 8px;
		padding: 0.4em 0.8em;
		cursor: pointer;
		font-family: inherit;
		font-size: 0.85em;
		display: flex;
		align-items: center;
		gap: 0.4em;
		color: rgb(var(--gray-dark));
		transition: border-color 0.2s ease, background 0.2s ease;
	}
	.lang-toggle:hover {
		border-color: rgb(var(--gray));
		background: rgba(var(--gray-light), 0.3);
	}
	.lang-dropdown {
		display: none;
		position: absolute;
		right: 0;
		top: 100%;
		margin: 0.35em 0 0 0;
		padding: 0.35em 0;
		list-style: none;
		background: white;
		border: 1px solid rgb(var(--gray-light));
		border-radius: 8px;
		box-shadow: var(--box-shadow);
		z-index: 100;
		min-width: 140px;
	}
	.language-selector:focus-within .lang-dropdown,
	.language-selector:hover .lang-dropdown {
		display: block;
	}
	.lang-dropdown a {
		display: block;
		padding: 0.5em 1em;
		text-decoration: none;
		color: rgb(var(--gray-dark));
		font-size: 0.85em;
		transition: background 0.15s ease;
	}
	.lang-dropdown a:hover {
		background: rgba(var(--gray-light), 0.5);
	}
	.lang-dropdown a[aria-current='page'] {
		font-weight: bold;
		color: var(--accent);
	}
	@media (max-width: 768px) {
		.lang-toggle {
			padding: 0.5em 1em;
			font-size: 0.9em;
		}
		.lang-dropdown {
			position: static;
			box-shadow: none;
			border: 1px solid rgb(var(--gray-light));
			margin-top: 0.5em;
		}
		.lang-dropdown a {
			padding: 0.6em 1em;
		}
	}
</style>

<script>
	document.querySelectorAll('.lang-toggle').forEach((btn) => {
		btn.addEventListener('click', () => {
			const expanded = btn.getAttribute('aria-expanded') === 'true';
			btn.setAttribute('aria-expanded', String(!expanded));
		});
	});
</script>
