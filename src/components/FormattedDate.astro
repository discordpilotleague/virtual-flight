---
import { bcp47, defaultLocale, type Locale } from '../i18n/locales';
import { getLocaleFromUrl } from '../i18n/utils';

interface Props {
	date: Date;
	locale?: Locale;
}

const { date, locale: propLocale } = Astro.props;
const locale = propLocale ?? (Astro.currentLocale as Locale | undefined) ?? getLocaleFromUrl(Astro.url.pathname);
const dateLocale = bcp47[locale] ?? bcp47[defaultLocale];
---

<time datetime={date.toISOString()}>
	{
		date.toLocaleDateString(dateLocale, {
			year: 'numeric',
			month: 'short',
			day: 'numeric',
		})
	}
</time>
