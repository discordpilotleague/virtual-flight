---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
---

<html lang="en">
	<head>
		<BaseHead title="404 â€” Page Not Found" description="The page you are looking for does not exist." locale="en" />
		<style>
			main {
				display: flex;
				flex-direction: column;
				align-items: center;
				justify-content: center;
				min-height: 60vh;
				padding: 2em 1em;
				text-align: center;
			}
			.error-code {
				font-size: clamp(5em, 15vw, 10em);
				font-weight: 800;
				line-height: 1;
				background: linear-gradient(135deg, #1a5fb4, #0d1b2a);
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				background-clip: text;
				margin: 0;
			}
			h1 {
				font-size: clamp(1.2em, 3vw, 1.8em);
				margin: 0.5em 0;
				color: rgb(var(--gray-dark));
			}
			p {
				color: rgb(var(--gray));
				font-size: 1.05em;
				max-width: 480px;
				line-height: 1.6;
				margin-bottom: 2em;
			}
			.back-link {
				display: inline-block;
				background: linear-gradient(135deg, #1a5fb4, #0d1b2a);
				color: white;
				padding: 0.75em 2em;
				border-radius: 8px;
				text-decoration: none;
				font-weight: 700;
				transition: transform 0.2s ease, box-shadow 0.2s ease;
			}
			.back-link:hover {
				transform: translateY(-2px);
				box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
				color: white;
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<p class="error-code">404</p>
			<h1>Page Not Found</h1>
			<p>The page you are looking for does not exist or has been moved. Please check the URL or return to the homepage.</p>
			<a href="/" class="back-link">Back to Home</a>
		</main>
		<Footer />
	</body>
</html>
