---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { useTranslations } from '../../i18n/utils';

const t = useTranslations('en');
const posts = (await getCollection('blog', ({ data }) => data.lang === 'en')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={t('site.title')} description={t('site.description')} locale="en" />
		<style>
			main {
				max-width: 1100px;
				padding: clamp(1.5em, 4vw, 3em) clamp(1em, 4vw, 2em);
			}
			h1 {
				text-align: center;
				margin-bottom: 1.5em;
			}
			.grid {
				display: grid;
				grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
				gap: 1.5em;
				list-style: none;
				margin: 0;
				padding: 0;
			}
			.grid li {
				display: flex;
			}
			.grid a {
				display: flex;
				flex-direction: column;
				text-decoration: none;
				background: white;
				border-radius: var(--radius);
				overflow: hidden;
				box-shadow: var(--box-shadow);
				transition: transform 0.2s ease, box-shadow 0.2s ease;
				width: 100%;
			}
			.grid a:hover {
				transform: translateY(-4px);
				box-shadow: var(--box-shadow-hover);
			}
			.grid img {
				width: 100%;
				aspect-ratio: 2 / 1;
				object-fit: cover;
				border-radius: 0;
			}
			.card-body {
				padding: 1.25em;
			}
			.title {
				margin: 0 0 0.5em;
				color: rgb(var(--black));
				line-height: 1.3;
				font-size: 1.1em;
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
				font-size: 0.85em;
			}
			.grid a:hover .title {
				color: var(--accent);
			}
			@media (max-width: 640px) {
				.grid {
					grid-template-columns: 1fr;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<h1>{t('nav.blog')}</h1>
			<ul class="grid">
				{
					posts.map((post) => (
						<li>
							<a href={`/blog/${post.id}/`}>
								{post.data.heroImage && (
									typeof post.data.heroImage.src === 'string' && post.data.heroImage.src.endsWith('.svg')
										? <img width="720" height="360" src={post.data.heroImage.src} alt="" />
										: <Image width={720} height={360} src={post.data.heroImage} alt="" />
								)}
								<div class="card-body">
									<h4 class="title">{post.data.title}</h4>
									<p class="date">
										<FormattedDate date={post.data.pubDate} locale="en" />
									</p>
								</div>
							</a>
						</li>
					))
				}
			</ul>
		</main>
		<Footer />
	</body>
</html>
