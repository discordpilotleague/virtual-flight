---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { bcp47, defaultLocale, type Locale } from '../i18n/locales';

type Props = {
	title: string;
	description: string;
	locale?: Locale;
};

const { title, description, locale = defaultLocale } = Astro.props;
---

<html lang={bcp47[locale]}>
	<head>
		<BaseHead title={title} description={description} locale={locale} />
		<style>
			main {
				width: 100%;
				max-width: 720px;
				margin: 0 auto;
				padding: clamp(2em, 5vw, 4em) clamp(1em, 4vw, 2em);
			}
			.page-title {
				text-align: center;
				margin-bottom: 1.5em;
				padding-bottom: 1em;
				border-bottom: 3px solid;
				border-image: linear-gradient(90deg, transparent, var(--accent), transparent) 1;
			}
			.page-title h1 {
				margin: 0 0 0.5em;
				font-size: clamp(1.6em, 4vw, 2.4em);
			}
			.page-title p {
				margin: 0;
				color: rgb(var(--gray));
				font-size: 0.95em;
			}
			.prose {
				line-height: 1.8;
				color: rgb(var(--gray-dark));
			}
			.prose :global(h2) {
				margin-top: 2em;
				margin-bottom: 0.75em;
				color: rgb(var(--black));
			}
			.prose :global(p) {
				margin-bottom: 1.25em;
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<div class="page-title">
				<h1>{title}</h1>
				<p>{description}</p>
			</div>
			<div class="prose">
				<slot />
			</div>
		</main>
		<Footer />
	</body>
</html>
